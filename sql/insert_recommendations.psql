INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Confier au Protecteur du citoyen le mandat d’assurer l’évaluation et le suivi de la mise en œuvre de l’ensemble des appels à l’action proposés dans ce rapport, et ce, jusqu’à leur pleine réalisation.', 138, 7, false, false, false);
INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Veiller à ce que le budget consenti au Protecteur du citoyen soit ajusté pour tenir compte des nouvelles responsabilités qui lui sont confiées.', 139, 7, false, false, false);
INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Inclure à la Loi sur le Protecteur du citoyen l’obligation pour le Protecteur du citoyen de produire et de rendre public une fois l’an un état d’avancement de la mise en œuvre des appels à l’action de la Commission, et ce, jusqu’à leur pleine réalisation.', 140, 7, false, false, false);
INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Procéder le plus rapidement possible à la traduction et à la diffusion du rapport synthèse de cette commission dans toutes les langues autochtones utilisées au Québec sous forme écrite au sein des peuples autochtone, et ce, en collaboration avec leurs représentants.', 141, 7, false, false, false);
INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Veiller le plus rapidement possible à la diffusion du contenu du rapport synthèse de cette commission par le biais de véhicules alternatifs de diffusion orale identifiés par les autorités autochtones elles-mêmes, en fonction des besoins et des réalités de leurs peuples.', 142, 7, false, false, false);




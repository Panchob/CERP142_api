INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Initier des discussions avec le gouvernement fédéral afin d’harmoniser le régime d’assurance-médicaments provincial et le Programme de services de santé non assurés pour offrir la couverture la plus complète et la plus équitable possible aux membres des communautés autochtones.', 101, 5, false, false, false);

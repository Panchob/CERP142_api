INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Présenter des excuses publiques aux membres des Premières Nations et aux Inuit du Québec pour les préjudices causés par les lois, les politiques, les normes ou les pratiques des services publics à leur encontre.', 1, 1, false, false, false);
INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Procéder à l’adoption d’une motion de reconnaissance et de mise en œuvre de la Déclaration des Nations Unies sur les droits des peuples autochtones au Québec.', 2, 1, false, false, false);
INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Procéder, en collaboration avec les autorités autochtones, à l’élaboration et à l’adoption d’une loi garantissant la prise en compte des dispositions de la Déclaration des Nations Unies sur les droits des peuples autochtones dans le corpus législatif relevant de ses compétences.', 3, 1, false, false, false);
INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Intégrer la collecte de données ethnoculturelles au fonctionnement, à la reddition de comptes et à la prise de décision des organisations du secteur public. Cela suppose concrètement qu’il faut : ', 4, 1, false, false, false);
INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Apporter les changements administratifs et législatifs nécessaires pour permettre aux autorités autochtones d’avoir accès facilement et en tout temps aux données relatives à leurs populations, notamment en santé et services sociaux.', 5, 1, false, false, false);
INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Faire des enquêtes populationnelles en lien avec les peuples autochtones un axe de recherche prioritaire, récurrent et pourvu d’un financement pérenne.', 6, 1, false, false, false);
INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Sensibiliser l’ensemble des conseils de bande des Premières Nations et des conseils des villages inuit à l’importance de prendre part aux enquêtes populationnelles effectuées au regard de leurs populations.', 7, 1, false, false, false);
INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Conclure des ententes avec le gouvernement fédéral afin que les deux paliers de gouvernement soutiennent financièrement le développement et l’amélioration des logements dans l’ensemble des communautés autochtones du Québec.', 8, 1, false, false, false);
INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Poursuivre les investissements financiers visant la construction de logements au Nunavik, en tenant compte des besoins réels des familles.', 9, 1, false, false, false);
INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Contribuer financièrement aux initiatives de logements sociaux pour Autochtones en milieu urbain.', 10, 1, false, false, false);
INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Faire de la mise en œuvre des mesures de soutien à la persévérance scolaire et à la réussite éducative des élèves et enfants autochtones une priorité et y consacrer les sommes nécessaires, le tout avec pour guide les besoins identifiés par les peuples autochtones eux-mêmes et le respect de leurs traditions ancestrales.', 11, 1, false, false, false);
INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Modifier le Règlement autorisant les ordres professionnels à déroger à l’application de l’article  35 de la Charte de la langue française pour étendre l’exception à tous les professionnels exerçant leurs activités dans une réserve, dans un établissement où vit une communauté autochtone ou sur les terres de catégorie 1 ou 1-N au sens de la Loi sur le régime des terres dans les territoires de la Baie James et du Nouveau-Québec, nonobstant leur lieu de résidence.', 12, 1, false, false, false);
INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Élargir la portée du Règlement autorisant les ordres professionnels à déroger à l’application de l’article 35 de la Charte de la langue française pour soustraire les interprètes et traducteurs en langues autochtones aux exigences relatives à la connaissance de la langue française.', 13, 1, false, false, false);
INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Rendre accessibles et permanents les services de traduction et d’interprétariat en langues autochtones partout au Québec en instituant une banque centralisée d’interprètes et de traducteurs à l’emploi du gouvernement.', 14, 1, false, false, false);
INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Encourager et permettre l’affichage bilingue ou trilingue dans les établissements appelés à desservir une forte population autochtone parlant une langue autre que le français.', 15, 1, false, false, false);
INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Rendre disponibles des formulaires traduits en langues autochtones dans les différents centres de services gouvernementaux.', 16, 1, false, false, false);
INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Faire en sorte que toute correspondance gouvernementale avec les autorités autochtones soit accompagnée d’une version traduite en anglais ou en langue autochtone, au choix de la communauté ou de l’organisation visée', 17, 1, false, false, false);
INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Émettre une directive à l’intention des établissements du réseau de la santé et des services sociaux mettant un terme à l’interdiction de parler une langue autochtone en contexte d’hébergement ou de soins et services.', 18, 1, false, false, false);
INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Procéder à la création et au financement de postes d’agents de liaison permanents choisis par les autorités autochtones qui soient accessibles dans les villages du Nunavik, les communautés des Premières Nations et les centres d’amitié autochtone du Québec.', 19, 1, false, false, false);
INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Réaliser, en collaboration avec les autorités autochtones, une campagne sociétale d’information sur les peuples autochtones du Québec, leur histoire, leur diversité culturelle et les enjeux de discrimination les affectant.', 20, 1, false, false, false);
INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Poursuivre, en collaboration avec les autorités autochtones, l’enrichissement du cursus scolaire québécois pour y introduire un portrait juste et représentatif de l’histoire des Premières Nations et des Inuit du Québec.', 21, 1, false, false, false);
INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Introduire, le plus tôt possible dans le parcours scolaire de l’élève, des notions relatives à l’histoire et aux cultures autochtones.', 22, 1, false, false, false);
INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Inclure, en collaboration avec les autorités autochtones, un volet sur les Premières Nations et les Inuit du Québec dans les parcours de formations collégiales et universitaires menant à une pratique professionnelle (médecin, travailleur social, avocat, journaliste ou autre).', 23, 1, false, false, false);
INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Sensibiliser les ordres professionnels à l’importance d’inclure dans leurs programmes de formation des contenus développés en collaboration avec les autorités autochtones et portant sur les besoins et caractéristiques des Premières Nations et des Inuit ainsi que sur la sécurisation culturelle.', 24, 1, false, false, false);
INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Rendre accessible à tous les cadres, professionnels et employés susceptibles d’être en contact avec les personnes issues des peuples autochtones et œuvrant dans les services publics des formations développées en collaboration avec les autorités autochtones et visant à favoriser la sensibilité, la compétence et la sécurisation culturelle. Dans le respect de la diversité culturelle des nations autochtones, la formation offerte doit être adaptée aux nations autochtones auprès desquelles ces gens sont appelés à travailler.', 25, 1, false, false, false);
INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Offrir une formation continue et récurrente à tous les cadres, professionnels et employés œuvrant dans les services publics et susceptibles d’être en contact avec les personnes issues des peuples autochtones.', 26, 1, false, false, false);


INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Adopter et mettre en œuvre une politique en matière de conflits d’intérêts dans le traitement des dossiers d’enquête et d’intervention.', 27, 2, false, false, false);
INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Explorer la possibilité de mettre sur pied des corps policiers autochtones régionaux.', 28, 2, false, false, false);
INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Réviser le mode de financement de la formation des aspirants policiers embauchés par les corps policiers autochtones pour réduire l’écart de coût entre les différentes catégories de candidats.', 29, 2, false, false, false);
INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Injecter les sommes nécessaires pour que l’offre de formation régulière et continue de l’École nationale de police du Québec soit entièrement accessible en anglais et en français.', 30, 2, false, false, false);
INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Établir, en collaboration avec les autorités autochtones, un état de situation complet des salaires versés, des infrastructures et équipements à la disposition des corps policiers autochtones ainsi que des réalités géographiques (distance, accès routier, etc.) et sociales (criminalité, pauvreté, etc.) des communautés qu’ils desservent.', 31, 2, false, false, false);
INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Entreprendre des négociations avec le gouvernement fédéral et les autorités autochtones pour convenir d’une enveloppe de mise à niveau des salaires, des infrastructures et des équipements des corps policiers autochtones.', 32, 2, false, false, false);
INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Évaluer la possibilité de mettre en place des politiques d’achats groupés pour l’ensemble des corps policiers autochtones du Québec.', 33, 2, false, false, false);
INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Modifier l’article 90 de la Loi sur la police pour reconnaître d’emblée aux corps policiers autochtones une existence et un statut similaires aux autres organisations policières du Québec.', 34, 2, false, false, false);
INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Entreprendre des négociations avec le gouvernement fédéral et les autorités autochtones pour assurer un financement récurrent et pérenne de l’ensemble des corps policiers autochtones.', 35, 2, false, false, false);
INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Modifier le processus d’attribution des ressources budgétaires aux corps policiers pour tenir-compte des besoins identifiés par les autorités autochtones en termes d’infrastructures, de ressources humaines, financières ou logistiques et des réalités propres aux communautés ou territoires.', 36, 2, false, false, false);
INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Évaluer la possibilité de mettre sur pied des patrouilles mixtes d’intervention (policiers et intervenant communautaire) auprès des personnes vulnérables, et ce, tant en milieu urbain que dans les communautés des Premières Nations et les villages inuit.', 37, 2, false, false, false);
INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Modifier la Loi sur la police pour faire passer le délai de prescription pour dépôt d’une plainte en déontologie policière à trois ans.', 38, 2, false, false, false);
INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Réaliser des campagnes d’information auprès des populations autochtones sur les processus de plainte existants.', 39, 2, false, false, false);

INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Financer la réalisation de projets, développés et gérés par les autorités autochtones, ayant pour objectif de documenter et de revitaliser le droit autochtone dans tous les secteurs jugés d’intérêt.', 40, 3, false, false, false);
INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Modifier les lois existantes, dont la Loi sur le Directeur des poursuites criminelles et pénales, afin de permettre la conclusion d’ententes sur la création de régimes particuliers d’administration de la justice avec les nations, les communautés ou les organismes autochtones officiant en milieu urbain.', 41, 2, false, false, false);
INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Favoriser l’implantation de programmes de justice communautaire et la mise en œuvre de programmes de mesures de rechange pour adultes autochtones dans l’ensemble des villes où la présence autochtone l’exige.', 42, 3, false, false, false);
INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Réserver aux programmes de justice communautaire autochtone, et aux organismes responsables de leur actualisation, un budget pérenne, proportionnel aux responsabilités assumées et ajusté annuellement afin d’en assurer la stabilité et tenir compte de l’augmentation normale du coût de fonctionnement de tels programmes.', 43, 2, false, false, false);
INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Modifier la Loi sur l’aide juridique pour introduire des tarifs particuliers dans le cas de dossiers impliquant des Autochtones, et ce, tant en matière civile que pénale.', 44, 3, false, false, false);
INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Investir dans l’aménagement de lieux adéquats à l’exercice de la justice dans chacune des communautés ou villages où siège la Cour itinérante, et ce, dans les meilleurs délais possibles.', 45, 3, false, false, false);
INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Mettre un terme à l’emprisonnement des personnes vulnérables, en situation d’itinérance ou à risque de le devenir pour non-paiement d’amendes en lien avec des infractions municipales.', 46, 3, false, false, false);
INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Mettre en place un programme d’accompagnement à la justice et d’intervention communautaire pour les personnes vulnérables, en situation d’itinérance ou à risque de le devenir.', 47, 3, false, false, false);
INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Modifier le Code de procédure pénale pour mettre un terme à l’emprisonnement des personnes vulnérables, en situation d’itinérance ou à risque de le devenir pour non-paiement d’amendes en lien avec des infractions municipales.', 48, 2, false, false, false);
INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Financer de façon pérenne les programmes d’accompagnement à la justice et d’intervention communautaire pour les personnes vulnérables, en situation d’itinérance ou à risque de le devenir.', 49, 3, false, false, false);
INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Implanter le plus rapidement possible l’usage de la visioconférence lors des enquêtes sur mise en liberté pour les détenus des régions éloignées, plus particulièrement en ce qui concerne le Nunavik.', 50, 3, false, false, false);
INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Réserver une enveloppe budgétaire exclusive à la rédaction des rapports Gladue et revoir à la hausse la rémunération accordée pour cette tâche à l’ensemble des rédacteurs.', 51, 3, false, false, false);
INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Accroître le nombre de rédacteurs autorisés à produire des rapports Gladue.', 52, 3, false, false, false);
INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Soutenir financièrement les organismes impliqués dans la production des rapports Gladue afin qu’ils procèdent à la bonification et à l’uniformisation de la formation offerte aux rédacteurs accrédités en collaboration avec les autorités autochtones.', 53, 2, false, false, false);
INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Avec la collaboration des autorités autochtones, évaluer périodiquement la qualité du travail réalisé par les rédacteurs des rapports Gladue.', 54, 3, false, false, false);
INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Permettre qu’une lettre Gladue soit préparée automatiquement lorsqu’une personne autochtone est judiciarisée et prévoir un financement à cette fin.', 55, 3, false, false, false);

INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Former l’ensemble des agents de probation du Québec à la préparation de rapports présentenciels autochtones et sur l’approche culturelle sécurisante à adopter lors de la cueillette d’information.', 56, 4, false, false, false);
INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Développer un outil d’évaluation spécifique aux contrevenants autochtones en collaboration avec des experts issus des Premières Nations et du peuple inuit.', 57, 4, false, false, false);
INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Implanter, le plus rapidement possible, et dans toutes les régions du Québec, des mesures alternatives à l’incarcération pour les personnes condamnées à une peine discontinue, le tout accompagné d’un financement pérenne.', 58, 4, false, false, false);
INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Mesurer et rendre compte annuellement de la situation relative aux transferts des détenus autochtones en collaboration avec les organismes autochtones partenaires.', 59, 4, false, false, false);
INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Instaurer un programme de financement des déplacements familiaux lorsqu’il n’y a pas d’autre choix que d’incarcérer un détenu dans un établissement provincial éloigné de son lieu de résidence ou de sa communauté d’appartenance.', 60, 4, false, false, false);
INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Permettre des communications par visioconférence entre les détenus et les membres de leur famille lorsqu’il n’y a pas d’autre choix que d’incarcérer un détenu dans un établissement provincial éloigné de son lieu de résidence ou de sa communauté d’appartenance.', 61, 4, false, false, false);
INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Modifier les règles en vigueur en ce qui a trait aux appels téléphoniques pour faire en sorte que les appels interurbains puissent être effectués au même coût que les appels locaux.', 62, 4, false, false, false);
INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Mettre en œuvre sans délai l’ensemble des recommandations avancées par le Protecteur du citoyen dans son rapport spécial sur les conditions de détention, l’administration de la justice et la prévention de la criminalité au Nunavik.', 63, 4, false, false, false);
INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Entreprendre dans les plus brefs délais, en collaboration avec les autorités autochtones, un chantier de travail sur l’amélioration des conditions de détention des femmes autochtones, de leur arrestation jusqu’à leur libération.', 64, 4, false, false, false);
INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Étendre les obligations imposées en matière de soins de santé à l’ensemble du personnel médical œuvrant auprès des détenus par règlement ou modification législative.', 65, 4, false, false, false);
INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Reconnaître que les dossiers médicaux des détenus leur appartiennent en propre et procéder à l’informatisation de ces dossiers en ayant recours au dossier santé Québec.', 66, 4, false, false, false);
INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Permettre par règlement ou modification législative le partage du dossier médical entier des détenus aux autorités compétentes lors de transferts ou de libération.', 67, 4, false, false, false);
INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Élargir à l’ensemble des centres de détention du Québec l’offre d’activités culturellement sécurisantes pour la clientèle autochtone, telles que des ateliers d’artisanat, des repas avec nourriture traditionnelle, des cercles de partage, l’accès à une tente de sudation ou encore du soutien spirituel assuré par des Aînés.', 68, 4, false, false, false);
INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Identifier, pour chacun des peuples autochtones, les Aînés intéressés à effectuer des interventions en milieu correctionnel et les inscrire dans une banque de ressources partagée à laquelle les autorités correctionnelles pourront se référer.', 69, 4, false, false, false);
INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Élaborer, en collaboration avec les autorités autochtones, des lignes directrices en matière de vérification de sécurité des objets sacrés autochtones.', 70, 4, false, false, false);
INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Former, en collaboration avec les autorités autochtones, les agents correctionnels à reconnaître les objets sacrés autochtones.', 71, 4, false, false, false);
INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'S’assurer de la disponibilité en milieu urbain de places réservées pour la clientèle autochtone dans des centres résidentiels communautaires déjà établis ou, le cas échéant, conclure une entente avec un organisme autochtone afin de créer une telle ressource.', 72, 4, false, false, false);
INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Modifier la Loi sur les services correctionnels du Québec pour y introduire un processus et des critères d’évaluation différents pour les contrevenants autochtones s’adressant à la Commission québécoise des libérations conditionnelles.', 73, 4, false, false, false);

INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Modifier la Loi sur les services de santé et les services sociaux et la Loi sur les services de santé et de services sociaux pour les autochtones cris pour y enchâsser la notion de sécurisation culturelle, et ce, en collaboration avec les autorités autochtones.', 74, 5, false, false, false);
INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Encourager les établissements du réseau de la santé et des services sociaux à mettre sur pied des services et des programmes répondant aux principes de sécurisation culturelle, développés à l’intention des peuples autochtones et en collaboration avec eux.', 75, 5, false, false, false);
INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Financer de façon récurrente et pérenne les services et les programmes répondant aux principes de sécurisation culturelle développés à l’intention des peuples autochtones.', 76, 5, false, false, false);
INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Prendre les mesures nécessaires pour que les services de transport médical d’urgence par voie terrestre ou aérienne, selon les circonstances, soient disponibles le plus rapidement possible et de façon constante dans l’ensemble des communautés, nonobstant les contraintes évoquées, et ce, en collaboration avec les autorités autochtones.', 77, 5, false, false, false);
INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Encourager la signature d’ententes entre les établissements du réseau de la santé et des services sociaux et les autorités autochtones pour garantir des places et un service culturellement sécurisant aux membres de la population autochtone vieillissante et à leur famille.', 78, 5, false, false, false);
INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Soutenir financièrement la création de services de soins de longue durée dans les communautés conventionnées.', 79, 5, false, false, false);
INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Initier des négociations tripartites avec le gouvernement fédéral et les autorités autochtones pour le développement de services de soins de longue durée dans les communautés non conventionnées.', 80, 5, false, false, false);
INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Faire de l’aménagement d’espaces culturellement adaptés aux nations autochtones une priorité dans les établissements du réseau public de soins de santé, particulièrement dans les régions comptant une forte population autochtone.', 81, 5, false, false, false);
INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Initier des négociations tripartites avec le gouvernement fédéral et les autorités autochtones pour mettre en place un mécanisme de financement formel de retour dans la communauté en fin de vie et le développement de soins palliatifs en communauté.', 82, 5, false, false, false);
INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Développer des corridors de services diagnostiques prioritaires pour les clientèles autochtones de tous âges par le biais de négociations tripartites avec le gouvernement fédéral et les autorités autochtones.', 83, 5, false, false, false);
INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Soutenir financièrement le développement de services de répit culturellement sécurisants et axés sur la famille dans les communautés conventionnées et en milieu urbain.', 84, 5, false, false, false);

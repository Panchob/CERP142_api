INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Encourager les établissements du réseau de la santé et des services sociaux à mettre sur pied des services inspirés du modèle de la Clinique Minowé en milieu urbain, et ce, en collaboration avec les autorités ou organisations autochtones présentes sur leur territoire.', 96, 5, false, false, false);
INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Financer de façon récurrente et pérenne les services inspirés du modèle de la Clinique Minowé développés en milieu urbain à l’intention des peuples autochtones.', 97, 5, false, false, false);
INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Émettre une directive à l’intention des établissements de santé et de services sociaux officiant en milieu urbain afin d’établir des corridors de service et des protocoles de communication clairs avec les autorités autochtones dans la communauté.', 98, 5, false, false, false);
INSERT INTO public.recommendations (text, number, section_id, ongoing, unsure, done) VALUES ( 'Soutenir financièrement et de façon pérenne les services offerts en milieu urbain aux clientèles itinérantes autochtones.', 99, 5, false, false, false);
